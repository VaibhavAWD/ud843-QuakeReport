<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/action_settings">

    <ListPreference
        android:defaultValue="@string/pref_order_by_magnitude"
        android:entries="@array/pref_order_by_labels"
        android:entryValues="@array/pref_order_by_values"
        android:key="@string/pref_key_order_by"
        android:title="@string/pref_label_order_by" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_min_magnitude"
        android:inputType="numberDecimal"
        android:key="@string/pref_key_min_magnitude"
        android:selectAllOnFocus="true"
        android:title="@string/pref_label_min_magnitude" />

</PreferenceScreen>